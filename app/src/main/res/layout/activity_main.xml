<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a6d8ff"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/email_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이메일"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="51dp" />

    <EditText
        android:id="@+id/password_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="비밀번호"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/email_area"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="login_button"
        android:paddingLeft="20dp"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@+id/password_area"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="join_button"
        android:paddingTop="10dp"
        android:text="회원가입"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp" />
</androidx.constraintlayout.widget.ConstraintLayout>